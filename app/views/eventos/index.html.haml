.row.not-margin
  .col-lg-12.wrapper.border-bottom.white-bg.page-heading
    %h2 Categorias
    %ol.breadcrumb
      %li
        %a{:href => "#{root_path}"} Inicio
      %li.active
        %strong Gestionar Eventos

.row
  .col-lg-12
    .ibox.float-e-margins
      .ibox-title
        %h5 Lista de Eventos
        .ibox-tools
          %a.collapse-link
            %i.fa.fa-chevron-up
      .ibox-content
        %div
          %span.input-group-btn
            %a.btn.btn-sm.btn-primary{:href => "#{new_evento_path}"} Crear
        %table.table.table-hover
          %thead
            %tr
              %th #
              %th Título
              %th Contenido
              %th Fecha
              %th Hora
              %th Acción
          %tbody
            - i=1;
            - @eventos.each do |evento|
              %tr
                %td= i
                %td= evento.titulo
                %td= evento.contenido
                %td= evento.fecha
                %td= evento.hora
                %td
                  = link_to evento do
                    %i.fa.fa-eye.text-navy
                  %a{:href => "#{edit_eevento_path(evento)}"}
                    %i.fa.fa-edit.text-navy
                  = link_to evento, method: :delete, data: { confirm: 'Are you sure?' } do
                    %i.fa.fa-trash.text-navy
                - i=i+1